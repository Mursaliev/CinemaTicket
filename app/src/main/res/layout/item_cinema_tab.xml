<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:background="@drawable/black_rounded"
        android:layout_marginLeft="10dp" />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:riv_corner_radius="4dp"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:elevation="6dp"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/panel"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:textColor="#FFF"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/phone"
        android:layout_width="13dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icons8_phone_48"/>
    <TextView
        android:id="@+id/hotline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:text="@string/hotline_string"
        android:textSize="14sp"
        android:textColor="#607D8B"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintStart_toEndOf="@id/phone"
        android:layout_marginBottom="5dp" />
    <TextView
        android:id="@+id/txt_hotline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#CFD8DC"
        app:layout_constraintStart_toEndOf="@id/hotline_text"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/location"
        android:layout_width="13dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/txt_name"
        app:layout_constraintTop_toTopOf="@id/txt_address"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icons8_place_marker_480"/>
    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:text="@string/address_string"
        android:textSize="14sp"
        android:textColor="#607D8B"
        app:layout_constraintStart_toEndOf="@id/location"
        app:layout_constraintTop_toTopOf="@id/txt_address"/>
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#CFD8DC"
        app:layout_constraintStart_toEndOf="@id/address_text"
        app:layout_constraintBottom_toBottomOf="@id/img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="5dp"/>
</android.support.constraint.ConstraintLayout>