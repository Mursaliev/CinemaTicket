<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/black"
    android:clickable="true"
    android:animateLayoutChanges="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingTop="14dp"
        android:layout_margin="10dp"
        android:paddingBottom="14dp"
        android:tint="@color/setting_label_color"
       android:background="@drawable/round_support_touch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_black_24dp" />
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        android:paddingStart="65dp"
        android:paddingEnd="65dp"
        android:text="@string/add_new_movie"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@drawable/round_support_touch"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/setting_label_color"/>
    <ImageView
        android:id="@+id/done_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingTop="14dp"
        android:layout_margin="10dp"
        android:paddingBottom="14dp"
        android:tint="@color/setting_label_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_support_touch"
        app:srcCompat="@drawable/ic_done_black_24dp" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/photo"
                android:layout_width="120dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:minHeight="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:riv_corner_radius="4dp"
                app:riv_border_width="2dp"
                app:riv_mutate_background="true"
                android:background="#070707"
                app:riv_border_color="@color/HeavyBlue"

               />
            <com.tuyenmonkey.mkloader.MKLoader
                android:id="@+id/photo_loader"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_photo_black_24dp"
                android:tint="@color/FlatBlue"
                app:layout_constraintStart_toStartOf="@id/photo"
                app:layout_constraintEnd_toEndOf="@id/photo"
                app:layout_constraintTop_toTopOf="@id/photo"
                app:layout_constraintBottom_toBottomOf="@id/photo"
                android:visibility="gone"
                app:mk_type="ThreePulse"/>
            <ImageView
                android:id="@+id/photo_empty_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_photo_black_24dp"
                android:tint="@color/FlatBlue"
                app:layout_constraintStart_toStartOf="@id/photo"
                app:layout_constraintEnd_toEndOf="@id/photo"
                app:layout_constraintTop_toTopOf="@id/photo"
                app:layout_constraintBottom_toBottomOf="@id/photo"
                android:background="@color/panel_background"/>

            <EditText
                android:id="@+id/image_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Image URL"
                android:paddingRight="15dp"
                android:paddingLeft="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp" />
            <EditText
                android:id="@+id/id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/id_detail"
                app:layout_constraintStart_toStartOf="@id/image_url"
                app:layout_constraintEnd_toStartOf="@id/auto_fill"
                android:background="@android:color/transparent"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="ID"
                android:text="@string/creating_new_id"
                android:paddingRight="15dp"
                android:textStyle="italic"
                android:inputType="none"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="@id/id"
                app:layout_constraintEnd_toEndOf="@id/auto_fill"
                app:layout_constraintTop_toBottomOf="@id/image_url"
                android:background="@drawable/line_top"/>
            <TextView
                android:id="@+id/id_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                app:layout_constraintStart_toStartOf="@id/image_url"
                app:layout_constraintEnd_toStartOf="@id/auto_fill"
                app:layout_constraintTop_toBottomOf="@id/image_url"
                android:textSize="11sp"
                android:selectAllOnFocus="false"
                android:textColor="#444"

                android:visibility="gone"
                android:text="@string/exist_movie_alert"
                />
            <TextView
                android:id="@+id/auto_fill"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/id"
                app:layout_constraintBottom_toBottomOf="@id/id"
                android:text="Auto Fill Form"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                android:textColor="@color/FlatOrange"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="5dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/round_support_touch"
                />
            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="65dp"
                app:layout_constraintTop_toBottomOf="@id/id"
                app:layout_constraintStart_toStartOf="@id/image_url"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:maxLines="1"
                android:textAllCaps="true"
                android:singleLine="true"
                android:hint="Movie Name"
                android:paddingRight="15dp" />
            <ImageView
                android:id="@+id/click_to_expand_option"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="@id/name"
                app:layout_constraintTop_toTopOf="@id/name"
                app:layout_constraintBottom_toBottomOf="@id/name"
                app:srcCompat="@drawable/ic_expand_more_black_24dp"
                android:tint="#888"
                android:rotation="180"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/option_panel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:background="@drawable/black_rounded_big_alpha">
            <TextView
                android:id="@+id/option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingTop="10dp"
                android:layout_marginStart="15dp"
                android:textSize="12dp"
                android:textColor="@color/FlatBlue"
                android:layout_marginLeft="15dp" />
            <TextView
                android:id="@+id/option_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/option"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/option"
                android:textSize="11sp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#444"
                android:text="Those fields are optional, you can add them later in the server"
                />
            <EditText
                android:id="@+id/cast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/option_detail"
                app:layout_constraintStart_toStartOf="@id/option"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Cast"
                android:paddingRight="15dp"
                android:paddingLeft="0dp" />
            <EditText
                android:id="@+id/director"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/cast"
                app:layout_constraintStart_toStartOf="@id/option"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Director"
                android:paddingRight="15dp"
                android:paddingLeft="0dp" />
            <EditText
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/director"
                app:layout_constraintStart_toStartOf="@id/option"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:hint="Description"
                android:paddingRight="15dp"
                android:paddingLeft="0dp" />
            <EditText
                android:id="@+id/genre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintStart_toStartOf="@id/option"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Genre"
                android:paddingRight="15dp"
                android:paddingLeft="0dp" />
            <EditText
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/genre"
            app:layout_constraintStart_toStartOf="@id/option"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/line_top"
            android:textColor="#CCC"
            android:textSize="15sp"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="Type"
            android:paddingRight="15dp"
            android:paddingLeft="0dp" />
            <EditText
                android:id="@+id/duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/type"
                app:layout_constraintStart_toStartOf="@id/option"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Duration"
                android:paddingRight="15dp"
                android:paddingLeft="0dp" />
            </android.support.constraint.ConstraintLayout>
            <EditText
                android:id="@+id/opening_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_marginTop="20dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                app:layout_goneMarginTop="0dp"
                app:layout_constraintTop_toBottomOf="@id/option_panel"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:inputType="date"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Opening day"
                android:paddingRight="15dp"
                android:paddingLeft="0dp" />
            <EditText
                android:id="@+id/trailer_youtube"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/opening_day"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintEnd_toStartOf="@id/check_youtube_link"
                android:background="@drawable/line_top"
                android:textColor="#CCC"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Youtube Trailer URL"
                android:paddingRight="15dp"
                android:paddingLeft="0dp"/>
            <TextView
                android:id="@+id/check_youtube_link"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/trailer_youtube"
                app:layout_constraintBottom_toBottomOf="@id/trailer_youtube"
                android:text="@string/check"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/FlatOrange"
                app:layout_constraintStart_toEndOf="@id/trailer_youtube"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round_support_touch"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/youtube_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/image_url"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trailer_youtube"
                android:textSize="11sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:selectAllOnFocus="false"
                android:linksClickable="false"
                android:autoLink="all"
                android:textColor="#444"
                android:textColorLink="#0062cc"
                android:text="@string/note_youtube_link"
                android:background="@drawable/line_top"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.constraint.ConstraintLayout>