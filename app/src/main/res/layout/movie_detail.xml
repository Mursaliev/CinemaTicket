<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:fitsSystemWindows="true"
    android:background="@android:color/black"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        >

        <ImageView
            android:id="@+id/back_image_view"
            android:layout_width="match_parent"
            android:layout_height="569dp"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:minHeight="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/madagasca" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/back_image_view"
            app:layout_constraintBottom_toBottomOf="@id/back_image_view"
            android:background="@drawable/transparent_to_black_gradient"/>
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/madagasca"
            app:layout_constraintBottom_toTopOf="@id/divider1"
            app:layout_constraintStart_toStartOf="@+id/back_image_view"
            android:background="@drawable/white_rounded"
            android:padding="3dp"
            />
        <TextView
            android:id="@+id/title"
            android:text="Madagascar 2"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintLeft_toRightOf="@+id/avatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/description"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="March 2017 PG 129 minutes"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/avatar"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#ddd"
            android:textSize="16sp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/rentButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/quite_red"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/quite_red"
            app:fabCustomSize="80dp"
            android:src="@drawable/white_ticket"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/back_image_view"
            app:layout_constraintBottom_toBottomOf="@id/back_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/book_now_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rentButton"
            app:layout_constraintStart_toStartOf="@id/rentButton"
            app:layout_constraintEnd_toEndOf="@id/rentButton"
            android:text="@string/book_now"

            android:padding="8dp"
            android:textSize="18sp"
            />
        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rentButton"
            android:layout_margin="16dp"
            android:background="#20FFFFFF"
            />

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="#eee"
            android:text="@string/content_string"
            app:layout_constraintTop_toBottomOf="@id/book_now_text_view"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:background="#44444444"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Detail"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="22sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.constraint.ConstraintLayout>
</ScrollView>